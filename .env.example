# Development/Local Environment

# Application
APP_NAME=Emy-FullStack-Agents
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
API_DOCS_ENABLED=true

# Database - PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/emydb
DB_HOST=localhost
DB_PORT=5432
DB_NAME=emydb
DB_USER=user
DB_PASSWORD=password
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/2
REDIS_MAX_CONNECTIONS=10

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1
CELERY_CONCURRENCY=4
CELERY_TASK_TIMEOUT=3600

# Authentication
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE=30
JWT_REFRESH_TOKEN_EXPIRE=7

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# OpenClaw
OPENCLAW_BASE_URL=https://api.openclaw.io/v1
OPENCLAW_API_KEY=your-openclaw-api-key

# Agent Settings
AGENT_CONCURRENCY=4
AGENT_TIMEOUT=300
AGENT_RETRY_COUNT=3

# Master Brain
OPTIMIZATION_INTERVAL=60
FEEDBACK_INTERVAL=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Storage
STORAGE_BACKEND=local
STORAGE_PATH=./storage

# ===========================================
# Sonia AI Assistant Configuration
# ===========================================

# Telegram Bot (get from @BotFather)
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_USER_ID=your-numeric-user-id

# Email (Zoho)
EMAIL_ADDRESS=sonia@wazhop.com
EMAIL_PASSWORD=your-zoho-app-password
